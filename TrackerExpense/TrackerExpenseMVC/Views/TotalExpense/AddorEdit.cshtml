@model TrackerExpenseMVC.Models.TotalExpenseMVC
@{
    ViewBag.Title = "AddorEdit";
}

<br />
<h2 style="color: #72a2c0 "><b>Create new  total expense</b></h2>
<div style="height: 20px; width: 20px; border-radius: 50%; background-color: #72a2c0; color: #72a2c0 ">.</div>
<div style="height: 10px; width: 10px; border-radius: 50%; background-color: #72a2c0; color: #72a2c0 ">.</div>
<br />
<br />
<div style="background-color:#d4dca9;border-radius:15px;">
    <div class="form-body" style="background-color: #72a2c0; padding: 90px; text-align: center; width: fit-content; border-bottom-left-radius: 15px; border-top-left-radius: 15px; color: white">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.TExpenseLimit, new { @style = "margin-right:195px;margin-left:115px;color:white;" })<br />
            @Html.TextBoxFor(model => model.TExpenseLimit, new { @style = "border:none;background:transparent;color:white;border-bottom:1px solid #d3d3d3;", @value=1 })<br />
            @Html.ValidationMessageFor(model => model.TExpenseLimit)
        </div>
            <div class="form-group">

                <input type="submit" value="Submit" class="btn button" style="background-color: white; color: #72a2c0;" />
                @*<input type="reset" value="Reset" class="btn button" />*@
            </div>
        }
    </div>
    <img src="~/Content/Image/totalexpense.jpeg" alt="Image" style="position: absolute;border-radius:10px; left: 1015px; top: 255px;width:279px;" />
</div>




    @section scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }

