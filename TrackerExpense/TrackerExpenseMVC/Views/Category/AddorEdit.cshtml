@model TrackerExpenseMVC.Models.CategoryMVC
@{
    ViewBag.Title = "AddorEdit";
}
<br />
<h2 style="color: #b9a7bb "><b> Create new category</b></h2>
<div style="height: 20px; width: 20px; border-radius: 50%; background-color: #b9a7bb; color: #b9a7bb ">.</div>
<div style="height: 10px; width: 10px; border-radius: 50%; background-color: #b9a7bb; color: #b9a7bb ">.</div>
<br />
<br />


<div style="background-color:#efdcf9;border-radius:15px;">
    <div class="form-body" style="background-color:#b9a7bb;padding:90px;text-align:center;width:fit-content;border-bottom-left-radius:15px;border-top-left-radius:15px;;color:white;">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.CId)
        <div class="form-group">
            @Html.LabelFor(model => model.CName, new { @style = "margin-right:195px;margin-left:65px;" })<br />
            @Html.TextBoxFor(model => model.CName, new { @style = "border:none;background:transparent;border-bottom:1px solid #d3d3d3;" })<br />
            @Html.ValidationMessageFor(model => model.CName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CExpenseLimit, new { @style = "margin-right:195px;margin-left:115px;" })<br />
            @Html.TextBoxFor(model => model.CExpenseLimit, new { @style = "border:none;background:transparent;border-bottom:1px solid #d3d3d3;" })<br />
            @Html.ValidationMessageFor(model => model.CExpenseLimit)
        </div>
            <div class="form-group">

                <input type="submit" value="Submit" class="btn button" style="color:#b9a7bb" />
               @* <input type="reset" value="Reset" class="btn button" />*@
            </div>
        }
    </div>
    <img src="~/Content/Image/expense.jpeg" alt="Image" style="border-radius:10px;position: absolute; left: 995px; top: 270px;width:320px;" />
</div>




    @section scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }
