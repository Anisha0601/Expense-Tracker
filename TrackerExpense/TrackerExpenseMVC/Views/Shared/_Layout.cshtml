<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <style>
        body{
            font-family:'Poppins',sans-serif;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  style="background-color:#8d5192; color:white;">
        <div class="container" style="color:white">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Expense Tracker", "Index", "ExpenseTracker", new { area = "" }, new { @class = "navbar-brand" })*@
                <a   href="https://localhost:44366/expensetracker" class="navbar-brand" style="font-size:17px;position:absolute;right:1280px;color:white;">Expense Tracker</a>
                <a   href="https://localhost:44366/expense" class="navbar-brand" style="font-size: 17px; position: absolute; right: 550px; color: white;">Expense</a>
                <a   href="https://localhost:44366/category" class="navbar-brand" style="font-size: 17px; position: absolute; right: 440px; color: white; ">Category</a>
                <a   href="https://localhost:44366/totalexpense" class="navbar-brand" style="font-size: 17px; position: absolute; right: 300px; color: white;">Total Expense</a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p> &#9829 From Anisha Singh</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/alertify.min.js"></script>
    @RenderSection("scripts", required: false)
    
</body>
</html>
